{
  // Continue Extension Configuration
  // Continue reads .cursorrules automatically, but you can also configure it here
  "continue.telemetryEnabled": false,
  "continue.enableTabAutocomplete": true,
  
  // Python Configuration
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  
  // Editor Configuration for AI-Assisted Development
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  
  // Files to exclude from AI context (to reduce noise)
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/venv": true
  },
  
  // GitHub Copilot Configuration (if installed)
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "python": true
  },
  
  // File Associations
  "files.associations": {
    ".cursorrules": "plaintext",
    ".continuerules": "plaintext"
  }
}

